<div class="col-sm-8 col-md-6">
	<h1>{{__ "Contact"}}</h1>
	{{#if enquirySubmitted}}
	<h3>{{__ "Your message has been successfully sent!"}}</h3>
	{{else}}
	<form method="post">
		<input type="hidden" name="action" value="contact">
		<div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
			<label>{{__ "Name"}}</label>
			<input type="text" name="name.full"  class="form-control" value="{{formData.[name.full]}}">
		</div>
		<div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
			<label>{{__ "Email"}}</label>
			<input type="email" name="email" class="form-control" value="{{formData.email}}">
		</div>
		<div class="form-group">
			<label>{{__ "Phone"}}</label>
			<input type="text" name="phone" placeholder="({{__ "optional"}})" class="form-control" value="{{formData.phone}}">
		</div>
		<div class="form-group {{#if validationErrors.message}}has-error{{/if}} ">
			<label>{{__ "Message"}}</label>
			<textarea name="message" placeholder="{{__ 'Leave a message here'}}" rows="4" class="form-control">{{formData.message}}</textarea>
		</div>

		<div class="g-recaptcha" data-sitekey="{{captchaSiteKey}}"></div>

		<div class="form-actions">
			<button type="submit" class="btn btn-primary">
				<span class="glyphicon glyphicon-envelope"></span>
				{{__ "Send"}}
			</button>
		</div>
	</form>
	{{/if}}
</div>
