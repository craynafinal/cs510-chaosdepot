<article>
	<p><a href="#" onclick="goBack()">&larr; back</a></p>
	<hr>
	<header>
		<h1>{{data.portfolio.title}}</h1>
		<h5>
			{{{categoryList data.portfolio.categories prefix="Category: "}}}
		</h5>
		<h5>
			{{date data.portfolio.publishedDate}}
		</h5>
	</header>
	<div class="portfolio">
		{{#ifeq data.portfolio.style "book"}}
		book
		{{else}} {{#ifeq data.portfolio.style "webapp"}}
		<a class="btn btn-large btn-info" target="_blank" href="{{data.portfolio.link}}">View App</a>
		{{#each data.portfolio.images}}
		<img src="{{{cloudinaryUrl height=450 crop='fill'}}}" class="img-responsive">
		{{/each}}
		{{else}}			
		{{#each data.portfolio.images}}
		<img src="{{{cloudinaryUrl height=450 crop='fill'}}}" class="img-responsive">
		{{/each}}
		{{{data.portfolio.content}}}
		{{/ifeq}}{{/ifeq}}
	</div>
</article>
