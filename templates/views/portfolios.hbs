<div class="container-fluid">
	{{#if filters.search}}
	<h4>{{__ "Search Results"}}: {{data.portfolios.total}}</h4>
	{{/if}}
	<div class="row masonry-container">
		{{# each data.portfolios.results}}
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 item">
			<div data-ks-editable="{{#if ../user}}{{adminEditableUrl ../../user _id}}{{/if}}" class="thumbnail">

				{{# if ../filters.category}}

				{{#if images}}
				<a href="{{portfolioUrl ../filters.category slug}}">
					<img src="{{{cloudinaryUrl images.[0] width=300 gravity='north' }}}" class="img">
				</a>
				{{/if}}
				<div class="caption">
					<h2>
						<a href="{{portfolioUrl ../filters.category slug}}">{{{title}}}</a>
					</h2>

				{{else}}

        {{#if images}}
				<a href="{{portfolioUrl categories.[0].key slug}}">
	        <img src="{{{cloudinaryUrl images.[0] width=300 gravity='north' }}}" class="img">
				</a>
        {{/if}}

        <div class="caption">
					<h2>
						<a href="{{portfolioUrl categories.[0].key slug}}">{{{title}}}</a>
					</h2>
				{{/if}}
					<p class="lead text-muted">{{{categoryList categories}}}</p>
					<hr>
					<p class="date">{{date publishedDate format=(__ '#date_format#')}}</p>
				</div>

			</div>
		</div>
		{{/each}}
	</div>

	{{>pagination}}
</div>
